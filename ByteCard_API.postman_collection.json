  "item": [
    {
      "name": "Logar com ADMIN",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin@bytecard.com\",\n  \"password\": \"admin\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/autorizacoes/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "autorizacoes",
            "login"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.globals.set(\"auth_token\", pm.response.json().token);"
            ]
          }
        }
      ]
